  <div class="container">
    <h1>Book a child</h1>
    <div class="d-flex flex-row justify-content-between">
      <div class="col-8">
        <h2><%= @kid.name %>, <%= @kid.localisation %></h2>
        <%= simple_form_for [ @kid, @booking ] do |f| %>
          <%= f.input :need %>
        <% end %>
        <%= simple_form_for :search, method: "get" do |f| %>
          <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.button :submit, "Create Booking", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div id="checkout" class="col-4 d-inline-flex flex-column">
        <div class="checkout">
          <h3>Checkout</h3>
        </div>
        <div class="checkout-details">
          <div>
            <% if @kid.photo.attached? %>
              <%= cl_image_tag @kid.photo.key, height: 50, width: 50, crop: :fill %> 
            <% end %>
          </div>
      </div>
    </div>
  </div>
<hr>
<%= link_to 'Back to list', kids_path, class: "btn btn-flat" %>
</div>
